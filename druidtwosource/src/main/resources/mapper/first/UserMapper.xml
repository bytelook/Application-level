<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="byteinfo.top.druidtwosource.mapper.first.UserMapper">

    <insert id="insertWithFields">
        insert into user (id, name, age) values (#{id},#{name},#{age})
    </insert>

    <select id="findByName" resultType="byteinfo.top.druidtwosource.entity.User">
        select id,name,age from user where name like concat('%',#{name},'%')
    </select>

    <delete id="delete">
        delete from user where id = #{id}
    </delete>
</mapper>